$icon-font-path = '../fonts/'

// bower:scss
// @import 'bower_components/bootstrap-sass/assets/stylesheets/_bootstrap.scss'
// endbower

hr
  margin-top: 4px
  margin-bottom: 4px

p
  margin: 0 0 4px

.pagination-sm
  > li
    > a, > span
      font-size: 11px
      line-height: 1
      padding: 5px 10px



.nav.nav-pills.sortBar
  padding: 4px
  background-color: #eee


.navbar
  border: 1px solid transparent
  position: relative
  min-height: 25px
  margin-bottom: 0

.navbar-brand
  float: left
  font-size: 14px
  line-height: 17px
  padding: 4px 5px
  height: 25px


.nav-tabs
  > li
    &.active
      a
        &:hover, &:focus
          border-radius: 0


    > a:hover
      border-radius: 0


.row
  margin-left: -5px
  margin-right: -5px

.col-xs-1, .col-sm-1, .col-md-1, .col-lg-1,
.col-xs-2, .col-sm-2, .col-md-2, .col-lg-2,
.col-xs-3, .col-sm-3, .col-md-3, .col-lg-3,
.col-xs-4, .col-sm-4, .col-md-4, .col-lg-4,
.col-xs-5, .col-sm-5, .col-md-5, .col-lg-5,
.col-xs-6, .col-sm-6, .col-md-6, .col-lg-6,
.col-xs-7, .col-sm-7, .col-md-7, .col-lg-7,
.col-xs-8, .col-sm-8, .col-md-8, .col-lg-8,
.col-xs-9, .col-sm-9, .col-md-9, .col-lg-9,
.col-xs-10, .col-sm-10, .col-md-10, .col-lg-10,
.col-xs-11, .col-sm-11, .col-md-11, .col-lg-11,
.col-xs-12, .col-sm-12, .col-md-12, .col-lg-12
  position: relative
  min-height: 1px
  padding-left: 4px
  padding-right: 4px


.form-control
  border-radius: 3px
  display: block
  font-size: 12px
  padding: 4px 5px
  height: 28px
  width: 100%
  box-shadow: inset 0 1px 1px rgba(0,0,0,0.06)
  transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s

.datepicker
  border-radius: 3px

select.form-control
  height: 28px
  border-radius: 2px !important;

.form-control
  border-radius: 1px

.btn
  border-radius: 1px
  padding: 3px 5px

  &.ss
    background-image: none
    font-weight: normal
    font-size: 12px
    margin-bottom: 0


.radio, .checkbox
  margin-top: 4px
  margin-bottom: 4px

  input[type="radio"], input[type="checkbox"]
    margin-left: -16px
    margin-top: 2px


.table
  > thead > tr > th,
  > thead > tr > td,
  > tbody > tr > th,
  > tbody > tr > td,
  > tfoot > tr > th,
  > tfoot > tr > td
    padding: 4px


  tr > th
    background-color: #eee
    color: #444

  .list-inline
    margin-bottom 0

.panel
  margin-bottom 8px

  .panel-heading
    padding: 4px 8px

  .panel-body
    padding: 8px 8px 4px

  .panel-footer
    padding: 8px 8px 4px
