.split-layout
  $header_h = 44px
  $panel_l = 160px
  $panel_r = 180px

  padding-top: $header_h
  overflow: hidden

  &.header
    margin-bottom: 0
    padding: 4px
    position: absolute
    overflow: inherit
    top: 0
    height: $header_h
    width: 100%

    .logo
      margin-top: 0
      margin-bottom: 0
      img
        height: 36px

  &.footer


  &.container-fulid
    display: table
    width: 100%
    height: 100%
    min-height: 100%

    > div
      display: table-cell
      vertical-align: top

      &.plL, &.plR
        .panel
          opacity: 1
          border: none
          border-radius: 0
          margin: 0
          transition: all .2s
          .panel-body
            padding: 8px 8px 4px


      &.plL
        width: $panel_l

      &.plR
        width: $panel_r

      &.plC
        height: 100%

        >.panel
          >.panel-footer
            background-color #fff
            border-radius 0
            border none
